<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.julienarzul.simpledialogfragment.sample.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/simple_dialog_no_title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - No title"/>

    <Button
        android:id="@+id/simple_dialog_with_title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - With title"/>

    <Button
        android:id="@+id/simple_dialog_one_button_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - 1 button"/>

    <Button
        android:id="@+id/simple_dialog_two_buttons_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - 2 buttons"/>

    <Button
        android:id="@+id/simple_dialog_three_buttons_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - 3 buttons"/>

    <Button
        android:id="@+id/simple_dialog_not_cancelable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog - Not cancelable"/>

    <FrameLayout
        android:id="@+id/simple_dialog_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
